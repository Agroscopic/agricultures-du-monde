{% extends "SonataUserBundle::layout_simple.html.twig" %}

{% block pagecontent %}
<div class="col-lg-3 ">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}
            </h5>
        </div>
    <div class="ibox-content">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="m-t" role="form">
            <div class="form-group">
                <input type="text" class="form-control" id="fos_user_registration_register_username" placeholder="{{ 'form.username'|trans({}, 'FOSUserBundle') }}" required="required"/>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="fos_user_registration_register_email" placeholder="{{ 'form.email'|trans({}, 'FOSUserBundle') }}" required="required"/>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" id="fos_user_registration_form_plainPassword_first" placeholder="{{ 'form.password'|trans({}, 'FOSUserBundle') }}" required="required"/>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" id="fos_user_registration_form_plainPassword_second" placeholder="{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}" required="required"/>
            </div>

            <div class="form-actions form-group">
                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-warning block full-width m-b" />
            </div>

        </form>
        </div>
    </div>
</div>
    {% endblock %}