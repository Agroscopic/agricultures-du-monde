{% extends "SonataUserBundle::layout_simple.html.twig" %}
{% block title %}{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}
{% endblock title %}
{% block pagecontent %}
    <h2 style="text-align: center;margin-top: 5%">Atlas des Agricultures du Monde</h2>
    <hr/>
    <div class="row">
<div class="col-lg-4 col-lg-offset-4 ">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}
            </h5>
        </div>
    <div class="ibox-content">
            {{ form_start(form,{'attr': {'class': 'm-t'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
               {{ form_label(form.username) }}
                {{ form_widget(form.username,{'attr': {'class': 'form-control','type':'text'}}) }}
                {{ form_errors(form.username) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email,{'attr': {'class': 'form-control','type':'email'}}) }}
                {{ form_errors(form.email) }}
            </div>

            {{ form_widget(form.plainPassword) }}
<br/>
            <div class="form-actions">
                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-warning block full-width m-b" />
            </div>
        <div class="form-group control-group" style="text-align: right;">
            <a href="{{ path('fos_user_security_login') }}">J'ai déjà un compte</a>
        </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
    {% endblock %}